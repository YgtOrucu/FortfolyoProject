@model List<Feature>
@{
    ViewData["Title"] = "Feature";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Özellikler</div>
            </div>
            <div class="card-body">
                <table class="table table-head-bg-success">
                    <thead>
                        <tr>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Title)</td>
                                <td>@(item.Description.Length < 60 ? item.Description : item.Description.Substring(0, 60) + " ...")</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="EditFeature" asp-route-id="@item.FeatureId" class="btn btn-warning">Edit</a>
                                    <a asp-controller="Admin" asp-action="DeleteFeature" asp-route-id="@item.FeatureId" class="btn btn-danger"> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Admin" asp-action="AddFeature" class="btn btn-primary"> Add</a>
            </div>
        </div>
    </div>
</div>

