@model Contact
@{
    ViewData["Title"] = "EditContact";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<h3>EditContact</h3>
<br />

<form asp-controller="Admin" asp-action="UpdateContact" method="post" class="form-control">

    @Html.TextBoxFor(x => x.ContactId, new { @type = "hidden" })
    <br />    
    <label asp-for="Title">Başlık</label>
    <input asp-for="Title" type="text" class="form-control" style="width:50%" />
    <br />
    <label asp-for="Description">Açıklama</label>
    <textarea asp-for="Description" type="text" rows="4" class="form-control" style="width:50%"> </textarea>
    <br />
    <label asp-for="Phone">Telefon</label>
    <input asp-for="Phone" type="tel" class="form-control" style="width:50%" />
    <br />
    <label asp-for="Email">Mail</label>
    <input asp-for="Email" type="email" class="form-control" style="width:50%" />
    <br />
    <label asp-for="Address">Adres</label>
    <textarea asp-for="Address" type="text" rows="4" class="form-control" style="width:50%"> </textarea>
    <br />
    <button type="submit" class="btn btn-success">Update</button>
</form>

