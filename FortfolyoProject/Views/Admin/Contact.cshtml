@model List<Contact>
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">İletişim Detayları</div>
            </div>
            <div class="card-body">
                <table class="table table-head-bg-success">
                    <thead>
                        <tr>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Mail</th>
                            <th scope="col">Adres</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Title)</td>
                                <td>@(item.Description.Length < 20 ? item.Description : item.Description.Substring(0, 20))</td>
                                <td>@(item.Phone)</td>
                                <td>@(item.Email)</td>
                                <td>@(item.Address.Length < 20 ? item.Address : item.Address.Substring(0, 20))</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="EditContact" asp-route-id="@item.ContactId" class="btn btn-warning">Edit</a>
                                    <a asp-controller="Admin" asp-action="DeleteContact" asp-route-id="@item.ContactId" class="btn btn-danger"> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Admin" asp-action="AddContact" class="btn btn-primary"> Add</a>
            </div>
        </div>
    </div>
</div>


