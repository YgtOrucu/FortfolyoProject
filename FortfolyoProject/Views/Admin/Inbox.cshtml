@model List<Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Mesajlar</h4>
            </div>

            <div class="card-body">
                <table class="table table-hover table-head-bg-success">
                    <thead>
                        <tr>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Mail</th>
                            <th>Detay</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Namesurname</td>
                                <td>@item.Subject</td>
                                <td>@item.Mail</td>
                                <td>
                                    @(item.Details != null && item.Details.Length > 20
                                                                    ? item.Details.Substring(0, 20) + "..."
                                                                    : item.Details)
                            </td>
                            <td>@item.SendDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge @(item.IsRead ? "badge-success" : "badge-secondary")">
                                    @(item.IsRead ? "Okundu" : "Okunmadı")
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-controller="Admin"
                                   asp-action="EditMessage"
                                   asp-route-id="@item.MessageId"
                                   class="btn btn-sm btn-warning">
                                    Düzenle
                                </a>

                                    <a asp-controller="Admin"
                                       asp-action="DeleteMessage"
                                       asp-route-id="@item.MessageId"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Silmek istediğine emin misin?')">
                                        Sil
                                    </a>

                                    <a asp-controller="Admin"
                                       asp-action="ChangeMessageStatus"
                                       asp-route-id="@item.MessageId"
                                       class="btn btn-sm @(item.IsRead ? "btn-secondary" : "btn-success")">
                                        @(item.IsRead ? "Okunmadı Yap" : "Okundu Yap")
                                    </a>
                                </td>
                            </tr>
                                                }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>


