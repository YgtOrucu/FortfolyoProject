@model List<SocialMedia>
@{
    ViewData["Title"] = "SocialMedia";
    Layout = "~/Views/Admin/IndexLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Sosyal Medya </div>
            </div>
            <div class="card-body">
                <table class="table table-head-bg-success">
                    <thead>
                        <tr>
                            <th scope="col">Başlık</th>
                            <th scope="col">Icon</th>
                            <th scope="col">Url</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Title)</td>
                                <td>@(item.Icon)</td>
                                <td>@(item.Url)</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="EditSocialMedia" asp-route-id="@item.SocialMediaId" class="btn btn-warning">Edit</a>
                                    <a asp-controller="Admin" asp-action="DeleteSocialMedia" asp-route-id="@item.SocialMediaId" class="btn btn-danger"> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Admin" asp-action="AddSocialMedia" class="btn btn-primary"> Add</a>
            </div>
        </div>
    </div>
</div>



