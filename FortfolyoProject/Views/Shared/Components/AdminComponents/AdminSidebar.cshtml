<div class="sidebar">
    <div class="scrollbar-inner sidebar-wrapper">
        <div class="user">
            <div class="photo">
                <img src="/Ready-Bootstrap-Dashboard-master/assets/img/profile.jpg">
            </div>
            <div class="info">
                <a class="" data-toggle="collapse" href="#collapseExample" aria-expanded="true">
                    <span>
                        @User.FindFirst("NameSurname")?.Value
                        <span class="user-level"> @User.FindFirst("Role")?.Value</span>
                        <span class="caret"></span>
                    </span>
                </a>
                <div class="clearfix"></div>

                <div class="collapse in" id="collapseExample" aria-expanded="true" style="">
                    <ul class="nav">
                        <li>
                            <a asp-controller="Admin" asp-action="Contact" class="nav-link">
                                <span class="link-collapse">İletişim Bilgilerim</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Login" asp-action="Logout" class="nav-link">
                                <span class="link-collapse">Çıkş Yap</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <ul class="nav">

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">
                    <i class="la la-dashboard"></i>
                    <p>Dashboard</p>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Admin" class="nav-link">
                    <i class="la la-dashboard"></i>
                    <p>Admin</p> 
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="About" class="nav-link">
                    <i class="la la-user"></i>
                    <p>Hakkımda</p> 
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Experience" class="nav-link">
                    <i class="la la-briefcase"></i>
                    <p>Deneyimler</p> 
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Skill" class="nav-link">
                    <i class="la la-cogs"></i>
                    <p>Yeteneklerim</p> 
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Feature" class="nav-link">
                    <i class="la la-star"></i> 
                    <p>Özellikler</p>
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Portfolio" class="nav-link">
                    <i class="la la-folder-open"></i>
                    <p>Projelerim</p> 
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="SocialMedia" class="nav-link">
                    <i class="la la-share-alt"></i>
                    <p>Sosyal Medya</p> 
                </a>
            </li>
        </ul>
    </div>
</div>