@model Contact
<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İletişim</h3>
            <h1>@Model.Title</h1>

            <p class="lead">@Model.Description</p>
        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form asp-controller="Admin" asp-action="SendMessageForIndexPage" method="post">
                <fieldset>

                    <div class="form-field">
                        <input name="Namesurname" type="text" id="Namesurname" placeholder="İsim Soyisim" value="" minlength="2" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="Mail" type="email" id="Mail" placeholder="Mail" value="" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="Subject" type="text" id="Subject" placeholder="Konu" value="" class="full-width">
                    </div>
                    <div class="form-field">
                        <textarea name="Details" id="Details" placeholder="Açıklama" rows="10" cols="50" required="" aria-required="true" class="full-width"></textarea>
                    </div>
                    <div class="form-field">
                        <button type="submit" class="full-width btn--primary">Gönder</button>
                        <div class="submit-loader">
                            <div class="text-loader">Gönderiliyor...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>

            <!-- contact-warning -->
            <div class="message-warning">
                Something went wrong. Please try again.
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Your message was sent, thank you!<br>
            </div>

        </div>
        <div class="col-four tab-full contact__infos">
            <h4 class="h06">Telefon</h4>
            <p>
                @Model.Phone
            </p>

            <h4 class="h06">Mail</h4>
            <p>
                @Model.Email
            </p>

            <h4 class="h06">Adres</h4>
            <p>
                @Model.Address
            </p>
        </div>

    </div>

</section>