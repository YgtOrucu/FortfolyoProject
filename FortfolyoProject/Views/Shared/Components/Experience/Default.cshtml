@model List<Experience>

<section id="experience" class="row about-content about-content--timeline target-section">

    <div class="col-full text-center">
        <h3>İş Deneyimlerim</h3>
    </div>

    <div class="col-12 tab-full left">
        <div class="timeline">
            @foreach (var item in Model)
            {
                <div class="timeline__block">
                    <div class="timeline__bullet"></div>
                    <div class="timeline__header">
                        <p class="timeline__timeframe">@(item.Date)</p>
                        <h3>@(item.Head)</h3>
                        <h5>@(item.Title)</h5>
                    </div>
                    <div class="timeline__desc">
                        <p>@(item.Description)</p>
                    </div>
                    <div class="timeline__footer">
                        <p><span> Kullanılan Teknolojiler : </span>@(item.UseTechnology)</p>
                    </div>
                </div>
            }
        </div>
    </div>

</section>